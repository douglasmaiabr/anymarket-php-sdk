{
    "name": "yampi/anymarket-php-sdk",
    "type": "library",
    "description": "Biblioteca não oficial de integração com a API da Anymarket",
    "autoload": {
        "psr-4": {
            "Yampi\\Anymarket\\" : "src/Yampi/Anymarket"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\" : "tests"
        }
    },
    "require": {
      "php": "^8.1 || ^8.2 || ^8.3",
      "guzzlehttp/guzzle": "^7.8"

    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^3.9",
      "larapack/dd": "^1.1",
      "phpunit/phpunit": "^10.5",
      "mockery/mockery": "^1.6"
    },
    "scripts": {
      "test": "phpunit --colors=always",
      "check-style": "phpcs -p --standard=PSR12 src tests",
      "fix-style": "phpcbf -p --standard=PSR12 src tests"
    }
}